{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Compiler",
            "type": "shell",
            "command": "make",
            "args": ["-C", "src", "comp"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build Evaluator",
            "type": "shell",
            "command": "make",
            "args": ["-C", "src", "eval"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"]
        },
    ]
}