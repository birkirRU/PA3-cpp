{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "File Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${input:fileName}",
            "args": [
                "output.txt",
                "input.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Compiler",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "StdIn Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${input:fileName}",
            "args": [
                "input.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Compiler",
            "miDebuggerPath": "/usr/bin/gdb"
        },
    ],
    "inputs": [
        {
            "id": "fileName",
            "type": "promptString",
            "description": "Enter the Executable Name - In MakeFile",
            "default": "compilation"
        }
    ]
}
